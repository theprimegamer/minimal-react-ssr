{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run watch-server",
            "name": "Server: Watch",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Server: Run",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}\\dist\\server-bundle.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Server: Serve",
            "configurations": ["Server: Watch", "Server: Run"]
        }
    ]
}